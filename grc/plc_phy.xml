<block>
  <name>PHY</name>
  <key>plc_phy</key>
  <category>PLC</category>
  <import>import plc</import>
  <make>plc.phy($disable_receiver, $disable_transmitter, $debug)</make>
  <param>
    <name>Transmitter</name>
    <key>disable_transmitter</key>
    <value>False</value>
    <type>bool</type>
    <option>
      <name>Enabled</name>
      <key>False</key>
    </option>
    <option>
      <name>Disabled</name>
      <key>True</key>
    </option>
  </param>
  <param>
    <name>Receiver</name>
    <key>disable_receiver</key>
    <value>False</value>
    <type>bool</type>
    <option>
      <name>Enabled</name>
      <key>False</key>
    </option>
    <option>
      <name>Disabled</name>
      <key>True</key>
    </option>
  </param>
  <param>
    <name>Debug</name>
    <key>debug</key>
    <value>False</value>
    <type>bool</type>
    <option>
      <name>Enable</name>
      <key>True</key>
    </option>
    <option>
      <name>Disable</name>
      <key>False</key>
    </option>
  </param>
  <sink>
    <name>mac in</name>
    <type>message</type>
    <optional>1</optional>
  </sink>
  <sink>
    <name>in</name>
    <type>float</type>
    <nports>3 if not $disable_receiver else 0</nports>
  </sink>
  <source>
    <name>mac out</name>
    <type>message</type>
    <optional>1</optional>
  </source>
  <source>
    <name>out</name>
    <type>float</type>
  </source>
</block>

