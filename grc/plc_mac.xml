<?xml version="1.0"?>
<block>
  <name>MAC</name>
  <key>plc_mac</key>
  <category>PLC</category>
  <import>import plc</import>
  <make>plc.mac($device_addr, $master, $debug)</make>
  <param>
    <name>Address</name>
    <key>device_addr</key>
    <value>[0x23, 0x23, 0x23, 0x23, 0x23, 0x23]</value>
    <type>int_vector</type>
  </param>
  <param>
    <name>Role</name>
    <key>master</key>
    <value>False</value>
    <type>bool</type>
    <option>
      <name>Master</name>
      <key>True</key>
    </option>
    <option>
      <name>Slave</name>
      <key>False</key>
    </option>
  </param>
  <param>
    <name>Debug</name>
    <key>debug</key>
    <value>False</value>
    <type>bool</type>
    <option>
      <name>Enable</name>
      <key>True</key>
    </option>
    <option>
      <name>Disable</name>
      <key>False</key>
    </option>
  </param>
  <sink>
    <name>app in</name>
    <type>message</type>
    <optional>1</optional>
  </sink>
  <sink>
    <name>phy in</name>
    <type>message</type>
    <optional>1</optional>
  </sink>
  <source>
    <name>app out</name>
    <type>message</type>
    <optional>1</optional>
  </source>
  <source>
    <name>phy out</name>
    <type>message</type>
    <optional>1</optional>
  </source>
</block>
