<?xml version="1.0"?>
<block>
  <name>MAC</name>
  <key>plc_mac</key>
  <category>PLC</category>
  <import>import plc</import>
  <make>plc.mac($device_addr, $master, $robo_mode, $modulation, $debug)</make>
  <param>
    <name>Address</name>
    <key>device_addr</key>
    <value>[0x23, 0x23, 0x23, 0x23, 0x23, 0x23]</value>
    <type>int_vector</type>
  </param>
  <param>
    <name>Role</name>
    <key>master</key>
    <value>False</value>
    <type>bool</type>
    <option>
      <name>Master</name>
      <key>True</key>
    </option>
    <option>
      <name>Slave</name>
      <key>False</key>
    </option>
  </param>
  <param>
    <name>ROBO Mode</name>
    <key>robo_mode</key>
    <value>0</value>
    <type>int</type>
    <option>
      <name>NO ROBO</name>
      <key>0</key>
    </option>
    <option>
      <name>STD_ROBO</name>
      <key>1</key>
    </option>
    <option>
      <name>HS_ROBO</name>
      <key>2</key>
    </option>
    <option>
      <name>MINI_ROBO</name>
      <key>3</key>
    </option>
  </param>
  <param>
    <name>Modulation</name>
    <key>modulation</key>
    <value>0</value>
    <type>int</type>
    <option>
      <name>BPSK</name>
      <key>0</key>
    </option>
    <option>
      <name>QPSK</name>
      <key>1</key>
    </option>
    <option>
      <name>QAM8</name>
      <key>2</key>
    </option>
    <option>
      <name>QAM16</name>
      <key>3</key>
    </option>
    <option>
      <name>QAM64</name>
      <key>4</key>
    </option>
    <option>
      <name>QAM256</name>
      <key>5</key>
    </option>
    <option>
      <name>QAM1024</name>
      <key>6</key>
    </option>
    <option>
      <name>QAM4096</name>
      <key>7</key>
    </option>
  </param>
  <param>
    <name>Debug</name>
    <key>debug</key>
    <value>False</value>
    <type>bool</type>
    <option>
      <name>Enable</name>
      <key>True</key>
    </option>
    <option>
      <name>Disable</name>
      <key>False</key>
    </option>
  </param>
  <sink>
    <name>app in</name>
    <type>message</type>
    <optional>1</optional>
  </sink>
  <sink>
    <name>phy in</name>
    <type>message</type>
    <optional>1</optional>
  </sink>
  <source>
    <name>app out</name>
    <type>message</type>
    <optional>1</optional>
  </source>
  <source>
    <name>phy out</name>
    <type>message</type>
    <optional>1</optional>
  </source>
</block>
